# ***********************************************************************
f90comp=gfortran 
# ***********************************************************************
split: split.o fileio.o
	$(f90comp) split.o fileio.o -o split.exe 

fileio.o:  fileio.f90
	$(f90comp) -c fileio.f90
split.o:  split.f90
	$(f90comp) -c split.f90
# ***********************************************************************
clean:
	rm  *.o  *.exe 
# ***********************************************************************

